{
  "name": "voluntech-platform",
  "version": "1.0.0",
  "description": "VolunTech - Volunteer Management Platform",
  "private": true,
  
  "scripts": {
    "frontend:install": "cd Frontend && npm install",
    "frontend:start": "cd Frontend && npm start",
    "frontend:android": "cd Frontend && npm run android",
    "frontend:ios": "cd Frontend && npm run ios",
    "frontend:web": "cd Frontend && npm run web",
    "frontend:lint": "cd Frontend && npm run lint",
    "frontend:reset": "cd Frontend && npm run reset-project",
    "backend:install": "cd Backend && npm install",
    "backend:start": "cd Backend && npm start",
    "backend:dev": "cd Backend && npm run dev",
    "install:all": "npm run frontend:install && npm run backend:install",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:start\"",
    "start": "concurrently \"npm run backend:start\" \"npm run frontend:start\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "Frontend",
    "Backend"
  ],
  "keywords": [
    "volunteer",
    "management",
    "react-native",
    "expo",
    "nodejs",
    "express"
  ],
  "author": "VolunTech Team",
  "license": "MIT",
  "dependencies": {
    "expo-updates": "~0.28.17"
  }
}
